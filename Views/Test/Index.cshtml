
@{
    ViewBag.Title = "Web API";
}

<h2>@ViewBag.Title</h2>

<table id="data" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Ф.И.О.</th>
            <th>Дата рождения</th>
            <th>Телефонный номер</th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>

<input id="fetch" type="button" value="Обновить" class="btn btn-primary" />

<script>
    window.onload = function () {
        fetch()
        $("#fetch").click(fetch)
    }

    function fetch() {
        $.get("/api/PhonesApi", buildTable)
    }

    function buildTable(data) {
        $("#data tbody").empty()
        for (let i of data) {
            const fullName = `${i.LastName} ${i.FirstName} ${i.MiddleName}`
            const dateOfBirth = i.DateOfBirth
            const phoneNumber = i.Number
            $("#data tbody").append(`<tr><td>${fullName}</td><td>${dateOfBirth}</td><td>${phoneNumber}</td></tr>`)
        }
    }
</script>